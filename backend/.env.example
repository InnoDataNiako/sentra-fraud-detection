# ===========================================
# SÉNTRA - Backend Environment Variables
# ===========================================

# === APPLICATION ===
APP_NAME="SÉNTRA Fraud Detection API"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Système intelligent de détection de fraude"
ENVIRONMENT="development"  # development | staging | production
DEBUG=True

# === API CONFIGURATION ===
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"
API_WORKERS=4

# === SECURITY ===
SECRET_KEY="your-super-secret-key-change-in-production-min-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# === DATABASE ===
# PostgreSQL
DATABASE_URL="postgresql://sentra_user:sentra_password@localhost:5432/sentra_db"
DB_ECHO=False  # True pour voir les requêtes SQL
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# === REDIS (Cache & Sessions) ===
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_TTL=3600  # Time to live en secondes

# === MACHINE LEARNING ===
ML_MODEL_PATH="./data/models/production"
ML_MODEL_NAME="fraud_model_v1.pkl"
ML_PREPROCESSING_PIPELINE="preprocessing_pipeline.pkl"
ML_THRESHOLD=0.85  # Seuil de détection fraude (0-1)
ML_BATCH_SIZE=32

# === LOGGING ===
LOG_LEVEL="INFO"  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT="json"  # json | text
LOG_FILE_PATH="./logs/sentra.log"
LOG_ROTATION="500 MB"

# === KAFKA (Streaming - Optionnel) ===
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_TOPIC_TRANSACTIONS="transactions"
KAFKA_TOPIC_ALERTS="fraud_alerts"
KAFKA_ENABLED=False

# === MONITORING ===
ENABLE_METRICS=True
PROMETHEUS_PORT=9090

# === EMAIL NOTIFICATIONS (Optionnel) ===
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
ALERT_EMAIL_FROM="alerts@sentra-ai.sn"
ALERT_EMAIL_TO="admin@sentra-ai.sn"

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# === CORS ===
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"